---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = 'Rex Kirshner',
  description = 'I write about Ethereum, take photos, make videos, and run all over the world.',
  ogImage,
  canonical
} = Astro.props;

// Import site metadata
import siteMetadata from '../../content/site/meta.json';

// Construct full URLs for SEO
const canonicalURL = canonical || new URL(Astro.url.pathname, 'https://rexkirshner.com').toString();
const ogImageURL = ogImage || siteMetadata.ogImage;
// Use logrex.eth.limo for OG image until rexkirshner.com DNS propagates
const fullOgImageURL = ogImageURL.startsWith('http') ? ogImageURL : `https://logrex.eth.limo${ogImageURL}`;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Essential Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Author & Copyright -->
    <meta name="author" content={siteMetadata.author} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Rex Kirshner" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImageURL} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@LogarithmicRex" />
    <meta name="twitter:creator" content="@LogarithmicRex" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImageURL} />
    <meta name="twitter:image:alt" content={title} />

    <!-- Additional SEO Meta -->
    <meta name="theme-color" content="#ffffff" />
    <meta name="format-detection" content="telephone=no" />

    <!-- Alternative URLs -->
    <link rel="alternate" href="https://rexkirshner.com" hreflang="en" />
    <link rel="alternate" href="https://logrex.eth.limo" hreflang="en" />
    <link rel="alternate" href="https://rexkirshner.eth.limo" hreflang="en" />

    <!-- Schema.org JSON-LD for Person -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Rex Kirshner",
      "url": "https://rexkirshner.com",
      "image": fullOgImageURL,
      "sameAs": [
        siteMetadata.social.twitter,
        siteMetadata.social.linkedin,
        siteMetadata.social.telegram
      ],
      "jobTitle": "Ethereum Researcher & Content Creator",
      "description": description,
      "knowsAbout": ["Ethereum", "Blockchain", "Photography", "Running", "Content Creation"],
      "email": siteMetadata.social.email
    })} />

    <!-- Resource Hints for External Origins -->
    <link rel="preconnect" href="https://cdn.rexkirshner.com" crossorigin />
    <link rel="dns-prefetch" href="https://tile.openstreetmap.org" />
    <link rel="dns-prefetch" href="https://i.vimeocdn.com" />
    <link rel="dns-prefetch" href="https://player.vimeo.com" />

    <!-- Google Analytics (loaded via Partytown for better performance) -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-4MVWLYW486"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-4MVWLYW486', {
        'send_page_view': true,
        'cookie_flags': 'SameSite=None;Secure'
      });
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-200 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo/Name -->
          <a id="nav-logo" href="#home" class="text-xl font-bold hover:text-gray-600 transition-opacity duration-300" style="opacity: 0">
            {siteMetadata.title}
          </a>

          <!-- Navigation Links -->
          <div class="hidden md:flex space-x-8">
            <a href="#consulting" class="hover:text-gray-600 transition-colors">Consulting</a>
            <a href="#programming" class="hover:text-gray-600 transition-colors">Programming</a>
            <a href="#ethereum" class="hover:text-gray-600 transition-colors">Blockchain</a>
            <a href="#creative" class="hover:text-gray-600 transition-colors">Creative</a>
            <a href="#running" class="hover:text-gray-600 transition-colors">Running</a>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden p-2 rounded-md hover:bg-gray-100" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-2">
            <a href="#consulting" class="py-2 hover:text-gray-600 transition-colors">Consulting</a>
            <a href="#programming" class="py-2 hover:text-gray-600 transition-colors">Programming</a>
            <a href="#ethereum" class="py-2 hover:text-gray-600 transition-colors">Blockchain</a>
            <a href="#creative" class="py-2 hover:text-gray-600 transition-colors">Creative</a>
            <a href="#running" class="py-2 hover:text-gray-600 transition-colors">Running</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer id="contact" class="bg-white border-t border-gray-200 py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <p class="text-gray-600 mb-4 md:mb-0">
            © {new Date().getFullYear()} {siteMetadata.title}. All rights reserved.
          </p>

          <!-- Social Links -->
          <div class="flex space-x-6">
            {siteMetadata.social.twitter && (
              <a
                href={siteMetadata.social.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 hover:text-gray-900 transition-colors"
                aria-label="Twitter"
              >
                Twitter
              </a>
            )}
            {siteMetadata.social.linkedin && (
              <a
                href={siteMetadata.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 hover:text-gray-900 transition-colors"
                aria-label="LinkedIn"
              >
                LinkedIn
              </a>
            )}
            {siteMetadata.social.telegram && (
              <a
                href={siteMetadata.social.telegram}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 hover:text-gray-900 transition-colors"
                aria-label="Telegram"
              >
                Telegram
              </a>
            )}
            {siteMetadata.social.email && (
              <a
                href={`mailto:${siteMetadata.social.email}`}
                class="text-gray-600 hover:text-gray-900 transition-colors"
                aria-label="Email"
              >
                Email
              </a>
            )}
          </div>
        </div>

        <!-- Back to Top Button -->
        <div class="mt-8 text-center">
          <a
            href="#home"
            class="inline-block px-4 py-2 text-sm text-gray-600 hover:text-gray-900 transition-colors"
          >
            ↑ Back to Top
          </a>
        </div>
      </div>
    </footer>

    <!-- Mobile Menu Toggle Script -->
    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Close mobile menu when clicking a link
      const mobileLinks = mobileMenu?.querySelectorAll('a');
      mobileLinks?.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu?.classList.add('hidden');
        });
      });
    </script>

    <!-- Nav Logo Fade on Scroll -->
    <script>
      const navLogo = document.getElementById('nav-logo');
      const homeSection = document.getElementById('home');

      function updateNavLogoOpacity() {
        if (!navLogo || !homeSection) return;

        // Get the h1 element inside the home section
        const pageTitle = homeSection.querySelector('h1');
        if (!pageTitle) return;

        // Get the bottom position of the h1 title
        const titleRect = pageTitle.getBoundingClientRect();
        const titleBottom = titleRect.bottom;

        // Define the fade range (starts fading when title is 100px from top, fully opaque when off-screen)
        const fadeStart = 100;
        const fadeEnd = 0;

        // Calculate opacity based on title position
        let opacity = 0;
        if (titleBottom <= fadeEnd) {
          opacity = 1;
        } else if (titleBottom <= fadeStart) {
          opacity = 1 - (titleBottom - fadeEnd) / (fadeStart - fadeEnd);
        }

        navLogo.style.opacity = opacity.toString();
      }

      // Update on scroll
      window.addEventListener('scroll', updateNavLogoOpacity);

      // Update on page load
      updateNavLogoOpacity();
    </script>

    <!-- Smooth Scroll -->
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
