---
import ExpansionLayout from '../layouts/ExpansionLayout.astro';
import ExpansionGrid from '../components/ExpansionGrid.astro';
import ExpansionLightbox from '../components/ExpansionLightbox.astro';

import episodesData from '../../content/expansion/episodes.json';
import metaData from '../../content/expansion/meta.json';

const { episodes } = episodesData;
---

<ExpansionLayout
  title={metaData.title}
  description={metaData.description}
  ogImage={metaData.ogImage}
>
  <!-- Hero Banner -->
  <section class="relative">
    <!-- Banner Image Container -->
    <div class="banner-container relative w-full overflow-hidden bg-gray-900">
      <img
        src="/images/expansion/expansion-banner.jpg"
        alt="Expansion Podcast by Blockworks"
        class="banner-image w-full h-auto"
      />

      <!-- Floating Back Button -->
      <a href="/#ethereum"
         class="absolute top-4 left-4 bg-white bg-opacity-90 hover:bg-opacity-100 text-gray-800 px-4 py-2 rounded-full flex items-center gap-2 transition-all shadow-lg hover:shadow-xl z-10">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        <span class="hidden sm:inline">Back to rexkirshner.com</span>
        <span class="sm:hidden">Back</span>
      </a>
    </div>

    <!-- Content Section Below Banner -->
    <div class="bg-gradient-to-b from-gray-900 to-gray-50 py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-gray-100 leading-relaxed max-w-3xl mx-auto mb-12 text-lg">
            {metaData.intro}
          </p>

          <!-- Stats Cards -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl font-bold text-blue-600">{metaData.stats.episodes}</div>
              <div class="text-gray-600 mt-1">Episodes</div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl font-bold text-green-600">{metaData.stats.guests}</div>
              <div class="text-gray-600 mt-1">Guests</div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-3xl font-bold text-purple-600">2</div>
              <div class="text-gray-600 mt-1">Years</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Episodes Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">All Episodes</h2>
      <ExpansionGrid episodes={episodes} />
    </div>
  </section>

  <!-- Lightbox Component -->
  <ExpansionLightbox episodes={episodes} />
</ExpansionLayout>

<style>
  /* Banner responsive behavior */
  .banner-container {
    height: 200px; /* Default mobile height */
    width: 100%;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Always fill the width */
    object-position: center center; /* Keep image centered at all sizes */
  }

  /* Small tablets and up - show more height */
  @media (min-width: 640px) {
    .banner-container {
      height: 250px;
    }
  }

  /* Desktop and all larger screens - fixed height to show more width */
  @media (min-width: 1024px) {
    .banner-container {
      height: 300px; /* Fixed height for all desktop+ sizes */
    }
  }
</style>