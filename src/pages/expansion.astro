---
import ExpansionLayout from '../layouts/ExpansionLayout.astro';
import ExpansionGrid from '../components/ExpansionGrid.astro';
import ExpansionLightbox from '../components/ExpansionLightbox.astro';

import episodesData from '../../content/expansion/episodes.json';
import metaData from '../../content/expansion/meta.json';

const { episodes } = episodesData;
---

<ExpansionLayout
  title={metaData.title}
  description={metaData.description}
  ogImage={metaData.ogImage}
>
  <!-- Hero Banner -->
  <section class="relative">
    <!-- Banner Image Container -->
    <div class="banner-container relative w-full overflow-hidden bg-gray-900">
      <img
        src="/images/expansion/expansion-banner.jpg"
        alt="Expansion Podcast by Blockworks"
        class="banner-image w-full h-auto"
      />

      <!-- Floating Back Button -->
      <a href="/#ethereum"
         aria-label="Back to main site Ethereum section"
         class="absolute top-4 left-4 bg-white bg-opacity-90 hover:bg-opacity-100 text-gray-800 px-4 py-2 rounded-full flex items-center gap-2 transition-all shadow-lg hover:shadow-xl z-10">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        <span class="hidden sm:inline">Back to rexkirshner.com</span>
        <span class="sm:hidden">Back</span>
      </a>
    </div>

    <!-- Content Section Below Banner -->
    <div class="bg-gradient-to-b from-gray-900 to-gray-50 py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-gray-100 leading-relaxed max-w-3xl mx-auto mb-12 text-lg">
            {metaData.intro}
          </p>

          <!-- Platform Links -->
          <div class="flex flex-wrap justify-center gap-4">
            <a href="https://podcasts.apple.com/us/podcast/expansion/id1750005751"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="Listen on Apple Podcasts"
               class="inline-flex items-center gap-2 px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-900 transition-colors shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              Apple Podcasts
            </a>

            <a href="https://open.spotify.com/show/5ZZIFIltH9gphj8I5wO60P?si=499f8fda864943cc&nd=1&dlsi=c3ec821226c24d46"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="Listen on Spotify"
               class="inline-flex items-center gap-2 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
              Spotify
            </a>

            <a href="https://www.youtube.com/@ExpansionPod"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="Watch on YouTube"
               class="inline-flex items-center gap-2 px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              YouTube
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Episodes Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">All Episodes</h2>
      <ExpansionGrid episodes={episodes} />
    </div>
  </section>

  <!-- Lightbox Component -->
  <ExpansionLightbox episodes={episodes} />
</ExpansionLayout>

<style>
  /* Banner responsive behavior */
  .banner-container {
    height: 200px; /* Default mobile height */
    width: 100%;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Always fill the width */
    object-position: center center; /* Keep image centered at all sizes */
  }

  /* Small tablets and up - show more height */
  @media (min-width: 640px) {
    .banner-container {
      height: 250px;
    }
  }

  /* Desktop and all larger screens - fixed height to show more width */
  @media (min-width: 1024px) {
    .banner-container {
      height: 300px; /* Fixed height for all desktop+ sizes */
    }
  }
</style>