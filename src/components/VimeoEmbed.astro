---
interface Props {
  vimeoId: string;
  title: string;
}

const { vimeoId, title } = Astro.props;
const separator = vimeoId.includes('?') ? '&' : '?';
---

<div class="vimeo-container">
  <iframe
    src={`https://player.vimeo.com/video/${vimeoId}${separator}badge=0&autopause=0&player_id=0&app_id=58479`}
    frameborder="0"
    allow="autoplay; fullscreen; picture-in-picture; clipboard-write"
    title={title}
    loading="lazy"
  ></iframe>
</div>

<style>
  .vimeo-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    background: #000;
    border-radius: 0.5rem;
  }

  .vimeo-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
