---
interface Props {
  heatmapUrl?: string;
  athleteId?: string;
}

const { heatmapUrl, athleteId } = Astro.props;

// If heatmap URL is provided, use it directly
// Otherwise, construct from athlete ID (note: public heatmaps require specific Strava settings)
const embedUrl = heatmapUrl || (athleteId ? `https://www.strava.com/athletes/${athleteId}/heatmaps/embed` : null);
---

{embedUrl ? (
  <div class="strava-heatmap-container">
    <iframe
      src={embedUrl}
      width="100%"
      height="500"
      frameborder="0"
      scrolling="no"
      title="Strava Heatmap"
      loading="lazy"
    ></iframe>
  </div>
) : (
  <div class="strava-placeholder">
    <div class="bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg p-12 text-center">
      <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
      </svg>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">Strava Heatmap</h3>
      <p class="text-gray-500 mb-4">Add your Strava heatmap URL to display your running routes</p>
      <p class="text-sm text-gray-400">
        Update <code class="bg-gray-200 px-2 py-1 rounded">content/running/stats.json</code> with your heatmap URL
      </p>
    </div>
  </div>
)}

<style>
  .strava-heatmap-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .strava-heatmap-container iframe {
    display: block;
    border-radius: 0.5rem;
  }

  code {
    font-family: 'Courier New', Courier, monospace;
  }
</style>
