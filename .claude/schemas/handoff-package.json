{
  "$id": "https://acs.rexkirshner.com/schemas/handoff-package.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schemaVersion": "1.0.0",
  "title": "HandoffPackage",
  "description": "Export package for AI-to-AI or developer handoffs",
  "type": "object",
  "required": ["metadata", "summary", "contextFiles", "nextSteps"],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "exportedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the handoff package was created"
        },
        "acsVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Version of ACS used"
        },
        "projectName": {
          "type": "string",
          "description": "Name of the project"
        }
      },
      "additionalProperties": false,
      "description": "Metadata about the export"
    },
    "summary": {
      "type": "object",
      "properties": {
        "projectState": {
          "type": "string",
          "maxLength": 500,
          "description": "Current state of the project"
        },
        "criticalDecisions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Most important decisions to understand"
        },
        "activeBlockers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Current blockers or issues"
        }
      },
      "additionalProperties": false,
      "description": "Summary for quick orientation"
    },
    "contextFiles": {
      "type": "object",
      "properties": {
        "context": {
          "type": "string",
          "description": "Contents of CONTEXT.md"
        },
        "status": {
          "type": "string",
          "description": "Contents of STATUS.md"
        },
        "decisions": {
          "type": "string",
          "description": "Contents of DECISIONS.md"
        },
        "recentSessions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Recent session entries from SESSIONS.md"
        }
      },
      "additionalProperties": false,
      "description": "Relevant context file contents"
    },
    "nextSteps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Prioritized list of next steps for the incoming AI/developer"
    }
  },
  "additionalProperties": false
}
