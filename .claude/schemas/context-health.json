{
  "$id": "https://acs.rexkirshner.com/schemas/context-health.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schemaVersion": "1.0.0",
  "title": "ContextHealth",
  "description": "Health score and status for AI Context System context files",
  "type": "object",
  "required": ["score", "breakdown", "nextAction", "resumePoint"],
  "properties": {
    "score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "Overall health score (0-100)"
    },
    "breakdown": {
      "type": "object",
      "description": "Component scores that sum to total",
      "properties": {
        "statusFreshness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 20,
          "description": "Points for STATUS.md freshness (max 20)"
        },
        "sessionsFreshness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 20,
          "description": "Points for SESSIONS.md freshness (max 20)"
        },
        "decisionsCoverage": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15,
          "description": "Points for decisions documentation (max 15)"
        },
        "contextCompleteness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15,
          "description": "Points for CONTEXT.md completeness (max 15)"
        },
        "quickReferenceSync": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15,
          "description": "Points for Quick Reference sync with canonical sources (max 15)"
        },
        "crossReferences": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15,
          "description": "Points for valid cross-references (max 15)"
        }
      },
      "additionalProperties": false
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of warnings about context health"
    },
    "nextAction": {
      "type": "string",
      "description": "Suggested next action to improve health"
    },
    "resumePoint": {
      "type": "string",
      "description": "Actionable resume point starting with imperative verb and including location",
      "examples": [
        "Continue implementing auth middleware in src/middleware/auth.ts",
        "Fix CI pipeline failures in .github/workflows/test.yml"
      ]
    }
  },
  "additionalProperties": false
}
